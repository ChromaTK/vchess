ul
  li Torre = torre limitada a 4 casillas = "torre corta" (S),
  li Caballo = dabbabah + wazir = "torre arbolada" (Y),
  li Alfil = dabbabah + ferz + L3 = "medio-pato" (H),
  li Dama = torre + caballo = "canciller" (O).

