ul
  li Torre = alfil_A + dabbabah = "bede" (D),
  li Caballo = wazir + alfil = "gofre" (W),
  li Alfil = ferz + alfil_A + dabbabah = "fad" (F),
  li Dama = alfil + caballo = "cardenal" (C).

