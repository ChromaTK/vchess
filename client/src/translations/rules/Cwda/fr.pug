ul
  li Tour = fou + dabbabah = "bede" (D),
  li Cavalier = wazir + alfil = "gaufre" (W),
  li Fou = ferz + alfil + dabbabah = "fad" (F),
  li Dame = fou + cavalier = "cardinal" (C).

