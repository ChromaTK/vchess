ul
  li Tour = tour limitée à 4 cases = "tour courte" (S),
  li Cavalier = dabbabah + wazir = "tour boisée" (Y),
  li Fou = dabbabah + ferz + L3 = "demi-canard" (H),
  li Dame = tour + cavalier = "chancelier" (O).

